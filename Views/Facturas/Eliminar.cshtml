@model Proyecto_MVC.Models.Facturas
@{
    ViewBag.Title = "Eliminar Factura";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-header bg-danger text-white text-center">
            <h3>Confirmar eliminación</h3>
        </div>
        <div class="card-body text-center">
            <p class="fs-5">¿Estás seguro de que deseas eliminar la siguiente factura?</p>

            <div class="alert alert-warning text-start mx-auto" style="max-width: 500px;">
                <p><strong>ID Factura:</strong> @Model.FacturaID</p>
                <p><strong>Fecha:</strong> @Model.Fecha.ToShortDateString()</p>
                <p><strong>Cliente:</strong> @ViewBag.Cliente.Nombre</p>
                <p><strong>Total:</strong> $@Model.Total</p>
            </div>

            <p class="text-muted">Esta acción no se puede deshacer. Los detalles de la factura también se eliminarán.</p>

            <form action="@Url.Action("Eliminar", "Facturas", new { id = Model.FacturaID })" method="post">
                @Html.AntiForgeryToken()

                <button type="submit" class="btn btn-danger px-4">
                    <i class="bi bi-trash3"></i> Eliminar
                </button>
                <a href="@Url.Action("Index", "Facturas")" class="btn btn-secondary px-4">
                    Cancelar
                </a>
            </form>
        </div>
    </div>
</div>
