@model IEnumerable<Proyecto_MVC.Models.Facturas>

@{
    ViewBag.Title = "Listado de Facturas";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <p class="h1 mb-4">Listado de Facturas</p>
        </div>    
    <!-- Botón nueva factura -->
        <div class="col text-end m-auto">
            <a href="@Url.Action("NuevaFactura", "Facturas")" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Nueva Factura
            </a>
        </div>
    </div>


    <!-- Buscador -->
    <form method="get" action="@Url.Action("Index", "Facturas")" class="mb-3 d-flex">
        <input type="text" name="search" class="form-control me-2" placeholder="Buscar por cliente o número de factura..." value="@Request.QueryString["search"]" />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
    </form>

    <!-- Contenedor de la tabla -->
    <div class="card shadow-sm">
        <div class="card-body p-0">

            <!-- Tabla con scroll -->
            <div style="max-height: 400px; overflow-y: auto;">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-primary sticky-top">
                        <tr>
                            <th>#</th>
                            <th>Cliente</th>
                            <th>Fecha</th>
                            <th>Subtotal</th>
                            <th>IVA</th>
                            <th>Total</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var factura in Model)
                            {
                                <tr>
                                    <td>@factura.FacturaID</td>
                                    <td>@factura.NombreCliente</td>
                                    <td>@factura.Fecha.ToShortDateString()</td>
                                    <td>@factura.SubtotalFactura.ToString("C")</td>
                                    <td>@factura.IVAFactura.ToString("C")</td>
                                    <td><strong>@factura.Total.ToString("C")</strong></td>
                                    <td>
                                        <a href="@Url.Action("Ver", "Facturas", new { id = factura.FacturaID })" class="btn btn-sm btn-primary">
                                            Ver detalle
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    No hay facturas registradas.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

