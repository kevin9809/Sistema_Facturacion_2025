@model IEnumerable<Proyecto_MVC.Models.ListaFacturasViewModel>

<div class="container mt-4">

    <div class="row">
        <div class="col h1">Listado de Facturas</div>

        <div class="col text-end m-auto">
            <a href="@Url.Action("Crear", "Facturas")" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Crear factura
            </a>
        </div>
    </div>

    <form method="get" action="@Url.Action("Index", "Facturas")" class="mb-3 d-flex">
        <input type="text" name="buscar" class="form-control me-2"
               placeholder="Buscar por nombre de cliente o número de factura..."
               value="@Request.QueryString["buscar"]" />
        <button type="submit" class="btn btn-outline-primary">Buscar</button>
    </form>

    <div class="card shadow-sm">
        <div class="card-body p-0">

            <div style="max-height: 400px; overflow-y: auto;">
                <table class="table table-striped table-hover mb-0">
                    <thead class="table-primary sticky-top">
                        <tr>
                            <th>ID</th>
                            <th>Fecha</th>
                            <th>Nombre del cliente</th>
                            <th>Total</th>
                            <th>Funciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.FacturaID</td>
                                    <td>@item.Fecha.ToShortDateString()</td>
                                    <td>@item.NombreCliente</td>
                                    <td>@item.Total</td>
                                    <td>
                                        <a href="@Url.Action("Detalles", "Facturas", new {
                                                id = item.FacturaID
                                            })" class="btn btn-sm btn-primary">
                                            Detalles
                                        </a>
                                        <a href="@Url.Action("Eliminar", "Facturas", new {
                                                id = item.FacturaID
                                            })" class="btn btn-sm btn-danger">
                                            Eliminar
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    No hay facturas registradas.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

