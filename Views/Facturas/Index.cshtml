@model IEnumerable<Proyecto_MVC.Models.Facturas>
@{
    ViewBag.Title = "Gestión de Facturas";
}

<h2>Gestión de Facturas</h2>

@Html.ActionLink("Crear Nueva Factura", "NuevaFactura", "Facturas", null, new { @class = "btn btn-success mb-3" })

<hr />

@using (Html.BeginForm("VerFactura", "Facturas", FormMethod.Post, new { @class = "form-inline" }))
{
    <div class="form-group mb-2">
        <label for="NumeroFactura" class="sr-only">Número de Factura:</label>
        <input type="text" class="form-control" id="NumeroFactura" name="id" placeholder="Ingrese el N° de Factura" required>
    </div>
    <button type="submit" class="btn btn-primary ml-2">Buscar</button>
}

<br />

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger mt-3" role="alert">
        @ViewBag.Error
    </div>
}

<h3 class="mt-4">Facturas Recientes</h3>
<p>Implementa el método de tu repositorio para listar las facturas aquí.</p>