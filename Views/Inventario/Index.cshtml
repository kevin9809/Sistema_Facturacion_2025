@model IEnumerable<Proyecto_MVC.Models.Productos>

@{
    ViewBag.Title = "Inventario";
}

<div class="container mt-4">
    <div class="row">
        <div class="col mb-4">
            <div class="h1">Inventario</div>
        </div>
        <div class="col m-auto text-end">
            <a href="@Url.Action("Crear", "Inventario")" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Agregar inventario
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <table class="table table-striped table-bordered">
            <thead class="table-primary">
                <tr>
                    <th>ID</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Categoría</th>
                    <th>Funciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ProductoID</td>
                        <td>@item.NombreProducto</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Precio.ToString("C")</td>
                        <td>@item.Stock</td>
                        <td>@item.Categoria</td>
                        <td>
                            <a href="@Url.Action("Editar", "Inventario", new { id = item.ProductoID })" class="text-primary me-2">Editar</a>
                            <a href="@Url.Action("Eliminar", "Inventario", new { id = item.ProductoID })" class="text-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @if (ViewBag.Mensaje != null)
    {
        <div class="text-danger">@ViewBag.Mensaje</div>
    }
</div>
